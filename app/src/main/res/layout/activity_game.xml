<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#263238"
    android:id="@+id/allLay"
    android:layout_height="match_parent"
    tools:context="com.fer.ppij.what.StartScreen">

        <LinearLayout
            android:orientation="vertical"
            android:layout_above="@+id/botLay"
            android:id="@+id/naVrhu"
            android:weightSum="8"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_margin="5dp"
                android:layout_weight="4"
                app:cardElevation="3dp"
                app:cardCornerRadius="5dp"
                android:id="@+id/la"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/topLay"
                    android:weightSum="2"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_weight="4"
                        android:layout_width="match_parent"
                        android:id="@+id/questImageLay"
                        android:visibility="gone"
                        android:layout_height="0dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:id="@+id/questImage"
                            android:background="@drawable/europe"
                            android:layout_height="180dp"
                            android:scaleType="centerCrop"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/gradient_white_empty"
                            android:layout_alignBottom="@id/questImage"></RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2">
                        <TextView
                            android:layout_weight="2"
                            android:id="@+id/questionTextView"
                            android:layout_centerInParent="true"
                            android:paddingLeft="32dp"
                            android:paddingRight="32dp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:text="Ovo je primjer pitanja haisfduab jsbajshnd lahbsdfkhahb dfak dbfajh dkzfadbfkjazzgdfka b dugog"
                            android:textAlignment="center"
                            android:textColor="#263238"/>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="gone"
                android:layout_weight="4"
                android:id="@+id/fourAnswerLayout"
                android:orientation="vertical"
                android:weightSum="4">
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/answerA"
                    android:layout_weight="1"
                    android:onClick="OnAnswerAClick"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:backgroundTint="#e0e0e0"
                    android:layout_height="0dp"
                    android:textAllCaps="false"
                    android:text="Jurenje"/>
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/answerB"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:onClick="OnAnswerBClick"
                    android:layout_height="0dp"
                    android:backgroundTint="#e0e0e0"
                    android:text="Jurenje"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    />
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/answerC"
                    android:layout_weight="1"
                    android:text="Jurenje"
                    android:onClick="OnAnswerCClick"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:backgroundTint="#e0e0e0"
                    android:layout_height="0dp"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    />
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/answerD"
                    android:layout_weight="1"
                    android:text="Jurenje"
                    android:layout_marginLeft="4dp"
                    android:textAllCaps="false"
                    android:layout_marginRight="4dp"
                    android:layout_height="0dp"
                    android:backgroundTint="#e0e0e0"
                    android:onClick="OnAnswerDClick"
                    android:layout_width="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:visibility="visible"
                android:gravity="center"
                android:layout_below="@+id/naVrhu"
                android:id="@+id/fill_in_answe_lay"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/fill_edit_text"
                    android:textColor="#fff"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="48dp"
                    android:textSize="20sp"
                    android:textColorHint="#68ffffff"
                    android:backgroundTint="#fff"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint="Unesi svoj odgovor"/>
                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/check_answer_button"
                    android:onClick="onCheckAnswerButtonClick"
                    android:text="Potvrdi odgovor"
                    android:layout_margin="16dp"
                    android:backgroundTint="#ffeb3b"
                    android:minHeight="0dp"
                    android:textColor="#3d3d3d"
                    android:textStyle="bold"
                    android:paddingTop="22dp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:paddingBottom="22dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="15sp"
                    android:minWidth="0dp"/>
            </LinearLayout>
        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/waitingLay"
        android:visibility="visible"
        android:background="#263238"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prog" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:text="UÄitavanje novog pitanja..."
                android:layout_margin="16dp"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:minHeight="60dp"
        android:id="@+id/botLay"
        android:background="#26a69a">
    </RelativeLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <android.support.design.widget.FloatingActionButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginBottom="-24dp"
            app:backgroundTint="#ffeb3b"
            app:borderWidth="0dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/scoreNum"
                android:padding="0dp"
                android:minHeight="0dp"
                android:layout_height="wrap_content"
                android:textColor="#2d2d2d"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="0"
                android:textSize="42sp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="11dp"
                android:text="SCORE"
                android:minHeight="0dp"
                android:textAlignment="center"
                android:textColor="#2d2d2d"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </FrameLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_continue"
        android:onClick="OnContinueButtonClick"
        android:visibility="gone"
        android:layout_margin="16dp"
        android:src="@drawable/ic_arrow_forward_white_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:fabSize="normal"
        app:borderWidth="0dp"
        app:backgroundTint="#263238"/>
</RelativeLayout>